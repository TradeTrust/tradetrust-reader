{
  "name": "openattestation-reader",
  "productName": "OpenAttestation Reader",
  "description": "Read .OA, .TT, .OC files through browser",
  "version": "0.1.0",
  "main": "main.ts",
  "build": {
    "appId": "com.example.app",
    "fileAssociations": [
      {
        "name": "TradeTrust Document",
        "ext": "tt"
      },
      {
        "name": "JSON Document",
        "ext": "json"
      },
      {
        "name": "OpenAttestation Document",
        "ext": "oa"
      },
      {
        "name": "OpenCert Document",
        "ext": "oc"
      }
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png"
    },
    "win": {
      "icon": "build/icon.png"
    },
    "linux": {
      "icon": "build/icon.png"
    }
  },
  "scripts": {
    "test-mac": "export NODE_ENV=development && electron .",
    "test-win": "set NODE_ENV=development && electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder build --publish=never",
    "lint": "eslint ./ --ext .ts --max-warnings 0",
    "lint:fix": "npm run lint -- --fix"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "electron": "^11.2.1",
    "electron-builder": "^22.9.1",
    "eslint": "^7.19.0",
    "eslint-config-google": "^0.14.0",
    "typescript": "^4.1.4"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  }
}
