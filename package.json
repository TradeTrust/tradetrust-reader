{
  "name": "TradeTrust-Reader",
  "productName": "TradeTrust Reader",
  "author": "GovTech",
  "version": "1.0.0",
  "description": "Read .OA, .TT files",
  "main": "./build/main.js",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "test-win": "npm run build && set NODE_ENV=development && electron ./build/main.js",
    "test-mac": "npm run build && export NODE_ENV=development && electron ./build/main.js",
    "copy-assets": "cp -rv src/assets build",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder build",
    "dist-all": "electron-builder -mwl"
  },
  "build": {
    "appId": "com.example.app",
    "directories": {
      "output": "dist",
      "buildResources": "build/assets"
    },
    "files": [
      "build/**/*"
    ],
    "extends": null,
    "fileAssociations": [
      {
        "name": "TradeTrust Document",
        "ext": "tt"
      },
      {
        "name": "JSON Document",
        "ext": "json"
      },
      {
        "name": "OpenAttestation Document",
        "ext": "oa"
      }
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/assets/icon.png"
    },
    "win": {
      "icon": "build/assets/icon.png"
    },
    "linux": {
      "icon": "build/assets/icon.png"
    },
    "nsis": {
      "runAfterFinish": false,
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.15.0",
    "@typescript-eslint/parser": "4.15.0",
    "electron": "11.2.3",
    "electron-builder": "^22.9.1",
    "eslint": "7.19.0",
    "typescript": "4.1.4"
  },
  "dependencies": {}
}
