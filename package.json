{
  "name": "openattestation-reader",
  "productName": "OpenAttestation Reader",
  "version": "1.0.0",
  "description": "Read .OA, .TT, .OC files",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start-win": "npm run build && npm run copy-assets && set NODE_ENV=development && electron ./dist/main.js ",
    "start-mac": "npm run build && npm run copy-assets && export NODE_ENV=development && electron ./dist/main.js ",
    "copy-assets": "cp -rv src/assets dist",
    "pack": "electron-builder --dir ",
    "dist": "electron-builder build --publish=never"
  },
  "build": {
    "appId": "com.example.app",
    "directories": {
      "output": "build"
    },
    "fileAssociations": [
      {
        "name": "TradeTrust Document",
        "ext": "tt"
      },
      {
        "name": "JSON Document",
        "ext": "json"
      },
      {
        "name": "OpenAttestation Document",
        "ext": "oa"
      },
      {
        "name": "OpenCert Document",
        "ext": "oc"
      }
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png"
    },
    "win": {
      "icon": "build/icon.png"
    },
    "linux": {
      "icon": "build/icon.png"
    }
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.15.0",
    "@typescript-eslint/parser": "4.15.0",
    "electron": "11.2.3",
    "electron-builder": "^22.9.1",
    "eslint": "7.19.0",
    "typescript": "4.1.4"
  },
  "dependencies": {}
}
